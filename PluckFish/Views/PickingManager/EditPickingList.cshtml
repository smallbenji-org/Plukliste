@model PluckFish.Controllers.EditPickingListViewModel;
@{
    ViewData["Title"] = "Opret plukliste";
}

<div class="card">
    <div>
        <h2>
            Redigerer: <span>@Model.CurrentPickingList.Name</span>
        </h2>
        <p>
            Adresse: @Model.CurrentPickingList.Adresse
        </p>
        <p>
            Forsendelse: @Model.CurrentPickingList.Forsendelse
        </p>
    </div>

    <div class="form-group search-container" style="margin-top: 1rem;">
        <input type="text" id="productSearch" class="form-control" placeholder="S�g produkter...">
        <div class="search-icon">
            <svg data-slot="icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"></path>
            </svg>
        </div>
    </div>

    <div class="table-container">
        <div class="table-wrapper">
            <h3>Produkter</h3>
            <table class="pluk-table">
                <thead>
                    <tr>
                        <th>Produkt</th>
                        <th>Handling</th>
                    </tr>
                </thead>
                <tbody id="produkter">
                    @foreach (var prod in Model.Products)
                    {
                        <tr>
                            <td>@prod.Name</td>
                            <td>
                                <form asp-action="AddProductToPickingList" method="post">
                                    <input type="hidden" name="listId" value="@Model.CurrentPickingList.Id" />
                                    <button class="action-btn btn-add" name="prodId" value="@prod.ProductID">Tilf�j</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="table-wrapper">
            <h3>Varer</h3>
            <table class="pluk-table products-table">
                <thead>
                    <tr>
                        <th>Produkt</th>
                        <th>M�ngde</th>
                        <th>Handling</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>
                                <form asp-action="SaveProductInPickingList" method="post" class="quantity-form" id="SaveProduct   ">
                                    <input type="hidden" name="productId" value="@item.Product.ProductID" />
                                    <input type="hidden" name="pickingListId" value="@Model.CurrentPickingList.Id" />

                                    <input type="number"
                                           name="productAmount"
                                           class="form-control quantity-input"
                                           value="@item.Amount" />

                                    <button type="submit" class="action-btn btn-save">Gem</button>
                                </form>
                            </td>
                            <td class="action-cell">
                                <form asp-action="RemoveProductFromPickingList" method="post">
                                    <input type="hidden" name="productId" value="@item.Product.ProductID" />
                                    <input type="hidden" name="pickingListId" value="@Model.CurrentPickingList.Id" />
                                    <button type="submit" class="action-btn remove-btn">Fjern</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <button class="action-btn btn-primary" onclick="saveAll()">Save All</button>
        </div>
    </div>
</div>

<div id="errorModal" class="modal">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <h2>Fejl</h2>
        <p id="errorMessage"></p>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const itemRows = document.querySelectorAll('.table-wrapper:last-child tbody tr');
        itemRows.forEach(row => {
            const input = row.querySelector('.quantity-input');
            const saveBtn = row.querySelector('.btn-save');
            const initialValue = input.value;

            saveBtn.disabled = true;

            input.addEventListener('input', () => {
                if (input.value !== initialValue) {
                    saveBtn.disabled = false;
                } else {
                    saveBtn.disabled = true;
                }
            });
        });
    });

    document.getElementById("productSearch").addEventListener("input", function () {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll("#produkter tr");

        rows.forEach(row => {
            let productName = row.querySelector("td").textContent.toLowerCase();
            row.style.display = productName.includes(filter) ? "" : "none";
        });
    });

    function saveAll() {
        var obj = {};

        document.querySelectorAll(".products-table .quantity-form").forEach(x => {
            var productId = x.querySelector("input[name=productId]").value;
            var amount = x.querySelector("input[name=productAmount]").value;
        
            obj[productId] = amount;
        });

        fetch("/PickingManager/EditPickingList/SaveAll", {
            method: "POST",
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(obj)
        }).then(x => {
            if (x.ok){
                document.location.reload();
            }
        });
    }

</script>
