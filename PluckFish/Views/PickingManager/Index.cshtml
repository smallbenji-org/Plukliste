@model PluckFish.Controllers.PickingListViewModel;
@{
    ViewData["Title"] = "Pluksystem";

    List<PickingList> notDoneLists = Model.PickingLists.FindAll(lists => lists.IsDone == false);
}

<div class="top-bar-container">
    <div class="card sixty-percent">
        <div class="pluklist-selector">
            <div class="selector-controls">
                <form asp-action="HandlePickingList" method="post">
                    <select class="list-dropdown" id="listSelector" name="id">
                        @if (!Model.PickingListSelected)
                        {
                            <option value="" selected>-- Vælg en plukliste --</option>
                        }

                        @foreach (var list in notDoneLists)
                        {
                            if (Model.SelectedPickingList != null && list.Id.Equals(Model.SelectedPickingList.Id))
                            {
                                <option value="@list.Id" selected>@list.Id - @list.Name - @list.Forsendelse</option>
                                continue;
                            }
                            <option value="@list.Id">@list.Id - @list.Name - @list.Forsendelse</option>
                        }
                    </select>
                </form>
            </div>
        </div>
    </div>
    <form asp-action="ImportPickingList" enctype="multipart/form-data" method="post">
        <input type="file" name="file" value="@Model.File" required />
        <input type="submit" />
    </form>

    <form asp-action="CreatePickingList" method="post" class="card-button twenty-percent">
        <button class="create-btn" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-clipboard-plus"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2" /><path d="M9 3m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z" /><path d="M10 14h4" /><path d="M12 12v4" /></svg>Opret plukliste</button>
    </form>
    <form asp-action="CreatePickingList" method="post" class="card-button twenty-percent">
        <button class="create-btn" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-plus"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>Importer fil</button>
    </form>
</div>

<script>
    document.getElementById("listSelector").addEventListener("change", function () {
        if (this.value) {
            this.form.submit();
        }
    });
</script>

@if (Model.PickingListSelected)
{
    <div class="row">
        <div class="card quarter-size">
            <div class="customer-details" id="customerInfo">
                <div class="detail-row">
                    <span class="label">Name:</span>
                    <span class="value" id="customerName">@Model.SelectedPickingList.Name</span>
                </div>
                <div class="detail-row">
                    <span class="label">Forsendelse:</span>
                    <span class="value" id="customerForsendelse">@Model.SelectedPickingList.Forsendelse</span>
                </div>
                <div class="detail-row">
                    <span class="label">Adresse:</span>
                    <span class="value" id="customerAdresse">@Model.SelectedPickingList.Adresse</span>
                </div>
            </div>
        </div>

        <div class="card three-quarters-size">
            <div class="pluk-table-container">
                <table class="pluk-table">
                    <thead>
                        <tr>
                            <th>ProductID</th>
                            <th>Title</th>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Tjek</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SelectedPickingList.Lines)
                        {
                            <tr>
                                <td>@item.Product.ProductID</td>
                                <td>@item.Product.Name</td>
                                <td>@item.Type</td>
                                <td>@item.Amount</td>
                                <td><input type="checkbox" class="form-checkbox"></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="action-buttons">
                <form asp-action="" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@Model.SelectedPickingList.Id" />
                    <button type="submit" class="action-btn btn-eksport">Eksporter</button>
                </form>
                <form asp-action="Index" method="post">
                    <button type="submit" class="action-btn btn-danger">Anuller</button>
                </form>
                <form asp-action="EditPickingList" method="get">
                    <input type="hidden" name="id" value="@Model.SelectedPickingList.Id" />
                    <button type="submit" class="action-btn btn-edit">Rediger</button>
                </form>
                <form asp-action="Toggle" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@Model.SelectedPickingList.Id" />
                    <button type="submit" class="action-btn btn-primary">Færdig</button>
                </form>
            </div>
        </div>
    </div>
}
